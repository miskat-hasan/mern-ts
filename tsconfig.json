{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language & Environment */
    "target": "ES2020",              // modern JS output
    "module": "commonjs",            // Node.js default (or "nodenext" if you want ESM)
    "lib": ["ES2020"],
    "types": ["node", "express"],    // load node & express types

    /* Debugging & Build Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interop */
    "esModuleInterop": true,         // allows import express from "express"
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
